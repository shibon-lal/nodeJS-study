<% include ../partials/header %>
    <div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
        <div class="row">
            <ol class="breadcrumb">
                <li><a href="#">
                        <em class="fa fa-home"></em>
                    </a></li>
                <li class="active">Forms</li>
            </ol>
        </div>
        <!--/.row-->

        <div class="row">
            <div class="col-lg-12">
                <!-- <h1 class="page-header">UI Elements</h1> -->
            </div>
        </div>
        <!--/.row-->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">Add Events</div>
                    <div class="panel-body">
                        <div class="col-md-6">
                            <form role="form" method="post" action="/event/postAdd">
                                <div class="form-group  <% if(hasErrors && errors[0].name) { %> has-error <% } %>">
                                    <label>Name</label>
                                    <input type="text" class="form-control" value="<% if(formDatas && formData[0].name) { %> <%= formData[0].name %> <% } %>"
                                        name="name" placeholder="Name of the event">
                                </div>
                                <div class="form-group <% if(hasErrors && errors[0].date) { %> has-error <% } %>">
                                    <label>Time</label>
                                    <div class='input-group date' id='datetimepicker1'>
                                        <input type='text' class="form-control" value="<% if(formDatas && formData[0].date) { %> <%= formData[0].date %> <% } %>"
                                            name="date" />
                                        <span class="input-group-addon">
                                            <span class="glyphicon glyphicon-calendar"></span>
                                        </span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label>Image</label>
                                    <input type="file" name="event_img">
                                    <p class="help-block">Example block-level help text here.</p>
                                </div>

                                <div class="form-group">
                                    <label>Description</label>
                                    <input type="hidden" id="event_img_enc" name="event_img_enc" />
                                    <textarea name="description" class="form-control" rows="3"><% if(formDatas && formData[0].description) { %> <%= formData[0].description %> <% } %></textarea>
                                </div>
                                <div class="form-group">
                                    <img src="" class="img-responsive edit-event-img" />
                                </div>
                                <a type="reset" href="/event" class="btn btn-default">Cancel</a>
                                <button type="submit" class="btn btn-primary">Submit</button>
                                
                            </form>
                        </div>
                    </div>
                </div><!-- /.panel-->
            </div><!-- /.col-->
            <div class="col-sm-12">
                <p class="back-link">Lumino Theme by <a href="https://www.medialoot.com">Medialoot</a></p>
            </div>
        </div><!-- /.row -->
    </div>
    <!--/.main-->

    <% include event_img_popup %>
        <% include ../partials/footer %>