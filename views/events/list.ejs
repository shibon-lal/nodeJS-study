<% include ../partials/header %>
    <div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
        <div class="row">
            <ol class="breadcrumb">
                <li><a href="#">
                        <em class="fa fa-home"></em>
                    </a></li>
                <li class="active">Events</li>
            </ol>
        </div>
        <!--/.row-->

        <div class="row">
            <div class="col-lg-12">
                <!-- <h1 class="page-header">Tables</h1> -->
            </div>
        </div>
        <!--/.row-->

        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">

                    <div class="panel-heading">Events <a type="button" href="/event/add" class="btn btn-md btn-primary pull-center">Add</a></div>

                    <div class="panel-body">
                        <div class="bootstrap-table">
                            <table class="table table-hover table table-striped table-bordered" id="table1">
                                <thead>
                                    <tr>
                                        <th><input type="checkbox" /></th>
                                        <th>Name</th>
                                        <th>Date</th>
                                        <!-- <th>Description</th> -->
                                        <th>Options</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-12">
                <p class="back-link">Lumino Theme by <a href="https://www.medialoot.com">Medialoot</a></p>
            </div>
        </div>
        <!--/.row-->
    </div>
    <% include ../partials/footer %>
        <% if (message && message.length > 0 ) { %>
            <script type="text/javascript">
                $.notify("<%= message %>", "success");
            </script>
            <% } %>

                <script type="text/javascript">
                    $('#table1').dataTable({
                        ajax: {
                            url: '/event/details',
                            type: 'POST'
                        },
                        serverSide: true,
                        columns: [
                            { 'data': 'check' },
                            { 'data': 'name' },
                            { 'data': 'date' },
                            // { 'data': 'description' },
                            { 'data': 'options' }
                        ]
                    });

                </script>